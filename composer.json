{
    "name": "huangdijia/php-coding-standard",
    "description": "PHP Coding Standards for Personal Use.",
    "license": "MIT",
    "keywords": [
        "php",
        "php-cs-fixer",
        "code-style",
        "code-format",
        "config",
        "standard"
    ],
    "authors": [
        {
            "name": "Deeka Wong",
            "email": "huangdijia@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ergebnis/composer-normalize": "^2.43",
        "friendsofphp/php-cs-fixer": "^3.45.0 !=3.63.0 !=3.63.1"
    },
    "autoload": {
        "psr-4": {
            "Huangdijia\\PhpCsFixer\\": "src/"
        },
        "files": [
            "src/Functions.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    },
    "scripts": {
        "cs-fix": "vendor/bin/php-cs-fixer fix $1",
        "json-fix": "@composer normalize --no-update-lock"
    }
}
