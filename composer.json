{
    "name": "huangdijia/php-coding-standard",
    "description": "PHP Coding Standards for Personal Use.",
    "keywords": [
        "php",
        "php-cs-fixer",
        "code-style",
        "code-format",
        "code-standard"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Deeka Wong",
            "email": "huangdijia@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "friendsofphp/php-cs-fixer": "^3.38.0"
    },
    "autoload": {
        "files": [
            "src/Functions.php"
        ],
        "psr-4": {
            "Huangdijia\\PhpCsFixer\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.2.x-dev"
        }
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix $1"
    }
}